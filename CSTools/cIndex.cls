' constantes
Private Const C_Module = "cIndex"
' estructuras
' variables privadas
Private m_Name                          As String
Private m_IndexType                     As SQLDMO_INDEX_TYPE
Private m_IndexedColumns                As cColumns
' eventos
' propiedades publicas
Public Property Get Name() As String
   Name = m_Name
End Property

Public Property Let Name(ByVal rhs As String)
   m_Name = rhs
End Property

Public Property Get IndexType() As SQLDMO_INDEX_TYPE
   IndexType = m_IndexType
End Property

Public Property Let IndexType(ByVal rhs As SQLDMO_INDEX_TYPE)
   m_IndexType = rhs
End Property

Public Property Get IndexedColumns() As cColumns
  Set IndexedColumns = m_IndexedColumns
End Property

Public Property Let IndexedColumns(ByVal rhs As cColumns)
  Set m_IndexedColumns = rhs
End Property
' propiedades friend
' propiedades privadas
' funciones publicas
' funciones friend
' funciones privadas
' construccion - destruccion
Private Sub Class_Initialize()
  On Error GoTo ControlError

  Set m_IndexedColumns = New cColumns

  GoTo ExitProc
ControlError:
  MngError Err, "Class_Initialize", C_Module, ""
  If Err.Number <> 0 Then Resume ExitProc
ExitProc:
  On Error Resume Next
End Sub

Private Sub Class_Terminate()
  On Error GoTo ControlError

  Set m_IndexedColumns = Nothing

  GoTo ExitProc
ControlError:
  MngError Err, "Class_Terminate", C_Module, ""
  If Err.Number <> 0 Then Resume ExitProc
ExitProc:
  On Error Resume Next
End Sub

